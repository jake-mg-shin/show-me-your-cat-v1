<%- include("../partials/header") %>

<div class="container">
  <h1 style="text-align: center;">Edit <%= cat.name %></h1>
  <div style="width: 50%; margin: 30px auto;">
    <form action="/cats/<%= cat._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="cat[name]"
          value="<%= cat.name %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="cat[image]"
          value="<%= cat.image %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="cat[desc]"
          value="<%= cat.desc %>"
        />
      </div>
      <button class="btn btn-lg btn-block btn-outline-secondary">
        Submit!
      </button>
    </form>
    <br />
    <a href="/cats/<%= cat._id %>">Go Back!</a>
  </div>
</div>

<%- include("../partials/footer") %>
