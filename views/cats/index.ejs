<%- include("../partials/header") %>

<div class="container">
  <section id="bg-img" class="jumbotron">
    <div class="text-right">
      <h1 id="font-w">Welcome to <span>ShowMeYourCat!</span></h1>
      <p id="font-w" class="lead">
        You can see most adorable cats in the world
      </p>
      <p class="text-right">
        <a class="btn btn-warning btn-lg" href="/cats/new">Post Your Cat!</a>
      </p>
    </div>
  </section>
  <hr />
  <section class="mb-3 text-center">
    <h3>
      <span id="border">
        Look at these cats
      </span>
    </h3>
  </section>

  <div class="row">
    <% cats.forEach((cat)=>{ %>
    <div class="col-lg-4 col-md-6">
      <div class="card">
        <img class="card-img-top" src="<%= cat.image %>" alt="" />
        <div class="card-body">
          <h4 class="card-title text-left"><%= cat.name %></h4>
          <p class="text-right">
            <a href="/cats/<%= cat._id %>" class="btn btn-outline-primary"
              >More</a
            >
          </p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include("../partials/footer") %>
