<%- include("../partials/header") %>

<div class="container">
  <h1 style="text-align: center;">Add your comment to <%= cat.name %></h1>
  <div style="width: 50%; margin: 30px auto;">
    <form action="/cats/<%= cat._id %>/comments" method="POST">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="comment[text]"
          placeholder="text"
        />
      </div>
      <!-- <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="comment[author]"
          placeholder="author"
        />
      </div> -->
      <button class="btn btn-lg btn-block btn-secondary">Submit!</button>
    </form>
    <br />
    <a href="/cats/<%= cat._id %>">Go Back!</a>
  </div>
</div>

<%- include("../partials/footer") %>
