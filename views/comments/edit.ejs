<%- include("../partials/header") %>

<div class="container">
  <h1 style="text-align: center;">Edit Comment</h1>
  <div style="width: 50%; margin: 30px auto;">
    <form
      action="/cats/<%= cat_id %>/comments/<%= comment._id %>?_method=PUT"
      method="POST"
    >
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="comment[text]"
          value="<%= comment.text %>"
        />
      </div>
      <!-- <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="comment[author]"
          placeholder="author"
        />
      </div> -->
      <button class="btn btn-lg btn-block btn-primary">Submit!</button>
    </form>
    <br />
    <a href="/cats">Go Back!</a>
  </div>
</div>

<%- include("../partials/footer") %>
